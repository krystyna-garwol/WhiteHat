<div class="bg-img-j">
</div>
<div class="container">
    <div class="select-user-form-j col-lg-4 col-md-6 col-sm-4" id="selectUser">
        <h3 id="lp-header">Select User</h3>
        <div class="d-flex flex-row flex-wrap justify-content-center">
            {{#each users}}
            <a href="/users/{{this.id}}/boards">
                <div class="card-body-j" style="background-image: url({{this.image}});">
                    <span class="card-body-tooltip-j">{{this.name}}</span>
                </div>
            </a>
            {{/each}}
        </div>
        <p class="p-landingpage">Don't have one?</p>
        <div class="text-center">
            <button class="btn" onclick="openForm()"><i class="fas fa-plus"></i>&nbsp; Create User</button>
        </div>
    </div>
</div>

{{!-- Create User Popup Form --}}
<div class="form-popup-k col-sm-4" id="createUser">
    <div class="card card-board-k card-popup">
        <div class="card-header card-header-k">Create New User</div>
        <div class="card-body">
            <form action="/users/create" method="POST">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" placeholder="Username" name="name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Avatar</label>
                    <input type="url" placeholder="Avatar Url" name="image" class="form-control" required>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn"><i class="fas fa-plus"></i>&nbsp; Submit</button>
                    <i onclick="closeForm()" class="far fa-times-circle fa-lg"></i>
                </div>
            </form>
        </div>
    </div>
</div>

</div>

<script>
    function openForm() {
        document.getElementById("createUser").style.display = "block";
        document.getElementById("selectUser").style.display = "none";
    }
    function closeForm() {
        document.getElementById("createUser").style.display = "none";
        document.getElementById("selectUser").style.display = "block";
    }
</script>